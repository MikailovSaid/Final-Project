@using Razzi.ViewModels.Account
@model LoginVM
@{
    ViewData["Title"] = "Index";
}

<main style="padding-top: 150px; padding-bottom: 100px; margin-bottom: -100px; background-color: #f5f5f5;">
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-12">
                    <div class="login">
                        <div class="account">
                            <div class="header">
                                <h2>Login</h2>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form asp-action="Index" method="post">
                                <div class="input-item">
                                    <input asp-for="Login" type="text" name="login" placeholder="Email or Username *">
                                </div>
                                <span asp-validation-for="Login" class="text-danger"></span>
                                <div class="input-item">
                                    <input asp-for="Password" type="password" name="password" class="hidden" placeholder="Password *">
                                    <i class="fas fa-eye show-password"></i>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div class="forgot-password mb-3">
                                    <a asp-action="ForgotPassword">Lost your password?</a>
                                </div>
                                <div class="forgot-password mb-3">
                                    <a asp-action="Register">New here?</a>
                                </div>
                                <div class="submit-btn">
                                    <button type="submit">Log in</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <section id="after-login">
            <div class="container">
                <div class="header text-center">
                    <h1>My Account</h1>
                </div>
                <div class="name mt-5">
                    Hello <b>@User.Identity.Name</b>
                </div>
                <div class="logout-btn">
                    <a asp-action="Logout">Logout</a>
                </div>
            </div>
        </section>
    }

</main>