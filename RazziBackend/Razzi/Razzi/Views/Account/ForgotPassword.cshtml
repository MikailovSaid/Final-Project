@using Razzi.ViewModels.Account
@model ForgotPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
}

<main style="padding-top: 150px; padding-bottom: 100px; margin-bottom: -100px; background-color: #f5f5f5;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-12">
                <div class="login">
                    <div class="account">
                        <div class="header">
                            <h2>Add your email</h2>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form asp-action="ForgotPassword" method="post">
                            <div class="input-item">
                                <input asp-for="Email" type="email" name="email" placeholder="Email *"/>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="submit-btn">
                                <button type="submit">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>