@using Razzi.ViewModels.Account
@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<main style="padding-top: 150px; padding-bottom: 100px; margin-bottom: -100px; background-color: #f5f5f5;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-12">
                <div class="register">
                    <div class="account">
                        <div class="header">
                            <h2>Register</h2>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form asp-="Account" asp-controller="Account" asp-action="Register">
                            <div class="input-item">
                                <input asp-for="FullName" type="text" name="fullname" id="" placeholder="Full name *">
                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                            <div class="input-item">
                                <input asp-for="Username" type="text" name="username" id="" placeholder="Username *">
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                            <div class="input-item">
                                <input asp-for="Email" type="email" name="email" id="" placeholder="Email Address *">
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="input-item">
                                <input asp-for="Password" type="password" class="hidden" placeholder="Password *">
                                <i class="fas fa-eye show-password"></i></i>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="input-item">
                                <input asp-for="ConfirmPassword" type="password" class="hidden" id="" placeholder="Confirm Password *">
                                <i class="fas fa-eye show-password"></i></i>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <div class="forgot-password mb-3">
                                <a asp-action="Index">Already have an account?</a>
                            </div>
                            <div class="submit-btn">
                                <button type="submit">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>