@model ProductVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" style="width:300px" asp-for="Name" maxlength="500" placeholder="Name">

            <label asp-for="Desc"></label>
            <input type="text" class="form-control" style="width:300px" asp-for="Desc" maxlength="500" placeholder="Decription">

            <label asp-for="RealPrice"></label>
            <input type="text" class="form-control" style="width:300px" asp-for="RealPrice" maxlength="500" placeholder="Price">

            <label asp-for="Count"></label>
            <input type="number" class="form-control" style="width:300px" asp-for="Count" maxlength="500" placeholder="Count">

            <label asp-for="StockStatus"></label><br />
            <input asp-for="StockStatus" /><br />

            <label asp-for="TopItem"></label><br />
            <input asp-for="TopItem" /><br />

            <label asp-for="Photo"></label>
            <input class="form-control" style="width:300px" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>

            <div class="form-group" style="width:300px;">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group" style="width:300px;">
                <label asp-for="GenderId"></label>
                <select asp-for="GenderId" class="form-control" asp-items="ViewBag.GenderId"></select>
            </div>
            <div class="form-group" style="width:300px;">
                <label asp-for="PriceId"></label>
                <select asp-for="PriceId" class="form-control" asp-items="ViewBag.PriceId"></select>
            </div>
            <div class="form-group" style="width:300px;">
                <label asp-for="ProductSizes"></label>
                <select asp-for="ProductSizes" class="form-control" asp-items="ViewBag.SizeId"></select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>