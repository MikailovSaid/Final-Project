@model List<Category>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="container">
    <div class="row">
        <div class="header d-flex justify-content-between mt-3">
            <h3>Categories</h3>
            <div>
                <a class="btn btn-success" asp-action="Create">Create</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Number
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Settings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                @if (category.BackImage != null)
                                {
                                    <img src="~/assets/img/category/@category.BackImage" style="width:150px;height:150px" alt="category" />
                                }
                                @if (category.BackImage == null)
                                {
                                    <h5>No Image</h5>
                                }
                            </td>
                            <td>
                                <h5>@category.Name</h5>
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-id="@category.Id">
                                    <i class="mdi mdi-account-box-outline"></i>
                                </a>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@category.Id">
                                    <i class="mdi mdi-table-edit"></i>
                                </a>
                                <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@category.Id">
                                    <button class="btn btn-danger btn-sm" type="submit">
                                        <i class="mdi mdi-delete-forever"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>