@model Category
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h3 class="mt-3">Category detail</h3>
    <div class="row mt-5">
        @if (Model.BackImage != null)
        {
            <img src="~/assets/img/category/@Model.BackImage" style="width:150px;height:150px" alt="category" />
        }
        @if (Model.BackImage == null)
        {
            <h5 style="color: darkred;">No Image</h5>
        }
        <h5 class="mt-2">Name: @Model.Name</h5>
    </div>
    <a asp-action="Index" class="btn btn-primary mt-3">Go back</a>
</div>